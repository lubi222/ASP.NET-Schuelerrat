@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<footer class="footer" style="height: 100%; ">
    <div class="footer-widgets">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <ul class="d-flex justify-content-around flex-wrap">
                        <li>
                            <a style="font-weight: bold; color: #aaa" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        <li>
                            <a style="font-weight: bold; color: #aaa" asp-area="" asp-controller="Clubs" asp-action="Index">Извънкласни дейности</a>
                        </li>
                        <li>
                            <a style="font-weight: bold; color: #aaa" asp-area="" asp-controller="School" asp-action="Index">Училището</a>
                        </li>
                        <li>
                            <a style="font-weight: bold; color: #aaa" asp-area="" asp-controller="Classes" asp-action="Index">Паралелки</a>
                        </li>
                        <li>
                            <a style="font-weight: bold; color: #aaa" asp-area="" asp-controller="AboutUs" asp-action="Index">За нас</a>
                        </li>
                        <li>
                            <a style="font-weight: bold; color: #aaa" asp-area="" asp-controller="Events" asp-action="All" asp-route-id="1">Събития</a>
                        </li>

                        @if (this.SignInManager.IsSignedIn(this.User))
                        {
                            <li>
                                <a style="font-weight: bold; color: #aaa" href="/Identity/Account/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a style="font-weight: bold; color: #aaa" href="/Identity/Account/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </div>
    </div>

    <div class="bottom">
        <div class="container">
            <ul class="flat-socials-v1">
                <li class="facebook">
                    <a href="#"><i class="fa fa-facebook"></i></a>
