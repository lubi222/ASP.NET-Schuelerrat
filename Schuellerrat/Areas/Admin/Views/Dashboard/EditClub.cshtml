@using System.Linq
@model Schuellerrat.InputModels.EditClubInputModel

@{
    this.ViewData["Title"] = "Промени извънкласна дейност";
}

<div class="container">
    <h2 class="mb-5">Промени клуб</h2>
    <form autocomplete="off" asp-controller="Dashboard" asp-action="EditClub" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <h4>Заглавие</h4>

            <input class="form-control" placeholder="Event title" asp-for="Title">
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="form-group mb-5">
            <h4>Изображение</h4>
            <input autocomplete="off" asp-for="Cover" class="form-control" />
            <span asp-validation-for="Cover" class="text-danger"></span>
        </div>

        <div class="form-group">
            <h4>Ръководител</h4>

            <input class="form-control" placeholder="Event title" asp-for="Leader">
            <span class="text-danger" asp-validation-for="Leader"></span>
        </div>

        <div class="form-group">
            <h4>Минимален клас</h4>

            <input class="form-control" placeholder="Event title" asp-for="MinClass">
            <span class="text-danger" asp-validation-for="MinClass"></span>
        </div>

        <div class="form-group">
            <h4>Максимален клас</h4>

            <input class="form-control" placeholder="Event title" asp-for="MaxClass">
            <span class="text-danger" asp-validation-for="MaxClass"></span>
        </div>

        <div class="form-group">
            <h4>Колко често</h4>

            <input class="form-control" placeholder="Event title" asp-for="Time">
            <span class="text-danger" asp-validation-for="Time"></span>
        </div>

        <div class="form-group">
            <h4>Описание</h4>

            <input class="form-control" placeholder="Event title" asp-for="Description">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>



        <button type="submit" class="btn btn-primary pl-5 pr-5 mb-5">Завърши</button>
    </form>
</div>

@section Scripts{
    <script>
        $(function () {
            $("#datepicker").datepicker({
                autoclose: true,
                todayHighlight: true,
                toggleActive: true,
                format: 'd/m/yyyy'
            }).datepicker('update', new Date());
        });
    </script>
}

