@using Schuellerrat.ViewModels
@model List<List<Schuellerrat.ViewModels.AllContentViewModel>>
@{
    List<AllContentViewModel> events = this.Model[0];
    List<AllContentViewModel> articles = this.Model[1];
}
<div class="container">
    @if (this.TempData.ContainsKey("message"))
    {
        <div class="alert alert-success alert-dismissible show" role="alert">
            @this.TempData["message"]
            <button style="padding: 0; height: auto" type="button" class="close" data-dismiss="alert" aria-label="Close">
                &times;
            </button>
        </div>
    }
<h2>Статии и блогове  <a asp-controller="Dashboard" asp-action="AddArticle"><button class="btn btn-success btn-lg">+</button></a></h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Заглавие</th>
                <th scope="col">Създадено на</th>
                <th scope="col">Администрация</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in articles)
            {
                <tr>
                    <td>@article.Title</td>
                    <td>@article.CreatedOn</td>
                    <td>
                        <a href="#">
                            <button class="btn btn-primary">Страница</button>
                        </a>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="EditArticle" asp-route-id="@article.Id">
                            <button class="btn btn-warning">Промяна</button>
                        </a>
                        <button class="btn btn-danger" data-toggle="modal" data-target="#myModal">Премахване</button>
                        <div id="myModal" class="modal" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Потвърдете действието</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Потвърждавате ли изтриването?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="DeleteArticle" asp-route-id="@article.Id">
                                            <button class="btn btn-danger">Премахване</button>
                                        </a>
                                        <button type="button" id="myInput" class="btn btn-secondary" data-dismiss="modal">Отказ</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="container">
    <h2>Събития <a asp-controller="Dashboard" asp-action="AddEvent"><button class="btn btn-success btn-lg">+</button></a></h2>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">Заглавие</th>
            <th scope="col">Създадено на</th>
            <th scope="col">Администрация</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var singleEvent in events)
        {
            <tr>
                <td>@singleEvent.Title</td>
                <td>@singleEvent.CreatedOn</td>
                <td>
                    <a asp-area="" asp-controller="Events" asp-action="Details" asp-route-id="@singleEvent.Id">
                        <button class="btn btn-primary">Страница</button>
                    </a>
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="EditEvent" asp-route-id="@singleEvent.Id">
                        <button class="btn btn-warning">Промяна</button>
                    </a>
                    <button class="btn btn-danger" data-toggle="modal" data-target="#myModal">Премахване</button>
                    <div id="myModal" class="modal" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Потвърдете действието</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Потвърждавате ли изтриването?</p>
                                </div>
                                <div class="modal-footer">
                                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="DeleteEvent" asp-route-id="@singleEvent.Id">
                                        <button class="btn btn-danger">Премахване</button>
                                    </a>
                                    <button type="button" id="myInput" class="btn btn-secondary" data-dismiss="modal">Отказ</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $('#myModal').on('shown.bs.modal', function () {
        $('#myInput').trigger('focus') });
    </script>
}
