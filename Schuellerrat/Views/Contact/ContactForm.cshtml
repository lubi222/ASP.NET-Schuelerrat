@model Schuellerrat.InputModels.EmailInputModel
@{
    this.ViewData["Title"] = "Contact form";


}

<div class="row">
    <div class="col-md-4 offset-4" >
        <h1>@this.ViewData["Title"]</h1>
        <form method="post" action="">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade"></label>
                <input asp-for="Grade" class="form-control" rows="5">
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea style="resize: none" rows="6" asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <input type="submit" class="btn btn-primary" />
        </form>
    </div>
</div>
